<?xml version="1.0" encoding="utf-8"?>
<e107Theme name="RideBlue3" version="1.0.2" date="2021-07-15" compatibility="2.3.1">
	<author name ="Jimako" email="" url="https://www.e107sk.com" />
	<summary>RideBlue theme by veskoto with e107 Bootstrap5 </summary>
	<description>RideBlue theme by veskoto with e107 Bootstrap5</description>
	<category>generic</category>
	<plugins>
		<plugin name='gallery' url='core' />
		<plugin name='social' url='core' />
		<plugin name='banner' url='core' />				
	</plugins>
	<keywords>
		<word>bootstrap</word>
		<word>core</word>
	</keywords>
	<screenshots>
		<image>rideblue2_preview.png</image>
	</screenshots>
	<stylesheets>
		<css file="style.css" name="Default" exclude="bootstrap5" />
	</stylesheets>
	<libraries>
		<library name="bootstrap" version="5" /> 
		<library name="fontawesome" version="5"  />
	</libraries>
	<layouts>
		<layout name='home' title='Home / Landing Page' >
			<custompages>FRONTPAGE</custompages>
		</layout>

        <layout name='default' title='Default layout' default='true' >
             <menuPresets>
				<area id='1'>
                    <menu name='login' />
					<menu name='other_news' />
					<menu name='blogcalendar' />
				</area>
				<area id='2'>
					<menu name='search' /> 
                    <menu name='online' />
					<menu name='news_categories' />				 
					<menu name='other_news2' />					
				</area>                
			</menuPresets>
        </layout>     
		<layout name='efiction' title='Efiction Pages' >
			<custompages>:efiction</custompages>             
		</layout> 
		<layout name='full' title='Full width page'  >
            <custompages>forum</custompages>															            
		</layout>    
		<layout name='sidebar' title='Sidebar left page'  >
			<custompages>user.php content/ calendar_menu/ blogcalendar_menu/</custompages>	
		</layout>
	</layouts>
	<themePrefs>
		<pref name='branding'>sitename</pref>
		<pref name='inlinecss'></pref>
		<pref name='inlinejs'></pref>
	</themePrefs>
</e107Theme>