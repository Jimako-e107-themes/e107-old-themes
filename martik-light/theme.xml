<?xml version="1.0" encoding="utf-8"?>
<e107Theme name="Martik Light" version="1.0.1" date="2019-05-17" compatibility="2.2">
	<author name ="Jimako"  url="https://www.e107.sk" />
	<summary>e107 Soraki theme based on Get Shit Done Bootstrap3 UI KIT by Creative Tim</summary>
	<description>Sorakie Light is based on the free version of this KIT, Soraki Premium is based on the PRO version of this UI KIT.</description>
	<category>generic</category>
	<keywords>
		<word>bootstrap</word>
		<word>clean</word>
	</keywords>
	<screenshots>
		<image>preview_frontend.jpg</image>
		<image>preview_responsive.jpg</image>
	</screenshots>
	<libraries>
 
		<library name="fontawesome" scope="all"/>
	</libraries>
	<stylesheets>
		<css file="style.css" name="Default"  />
	</stylesheets>
	<layouts>
		<layout name='homepage' title='Homepage Option' default='false'>
			<custompages>FRONTPAGE</custompages>	
		</layout>
		<layout name='full' title='Full width page'  >
            <custompages>page, blogcalendar_menu, forum</custompages>    
		</layout> 
		<layout name='singlesignup' title='Register Page'  >
            <custompages>signup</custompages>    
		</layout>
		<layout name='sidebar_right' title='Blog sidebar-right' default='true' >
			<custompages>/news</custompages>	
		</layout>
	</layouts>
</e107Theme>